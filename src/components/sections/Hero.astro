---
import HeroParticlesThree from "../visuals/HeroParticlesThree";
---

<section
  class="relative w-full min-h-[100vh] flex flex-col justify-center items-center overflow-hidden"
>
  <!-- Visual Background: Three.js -->
  <HeroParticlesThree client:load />

  <!-- Content -->
  <div
    class="z-10 text-center space-y-6 px-6 max-w-4xl opacity-0 animate-[fade-in_1s_ease-out_0.5s_forwards]"
  >
    <h1
      class="text-5xl md:text-7xl font-bold tracking-tight text-foreground mix-blend-difference"
    >
      Cinnamon Roll
    </h1>
    <p
      class="text-xl md:text-2xl text-muted-foreground font-light leading-relaxed max-w-2xl mx-auto"
    >
      Digital architect crafting calm, resilient systems. <br />
      Specializing in performance and subtraction.
    </p>
  </div>

  <!-- Scroll Indicator -->
  <div class="absolute bottom-12 animate-pulse opacity-40 text-foreground">
    <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path
        stroke-linecap="round"
        stroke-linejoin="round"
        stroke-width="1"
        d="M19 14l-7 7m0 0l-7-7m7 7V3"></path>
    </svg>
  </div>
</section>
