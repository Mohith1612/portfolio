---
const ideas = [
  {
    title: "",
    date: "",
  },
];
---

<section class="w-full py-24 px-6 md:px-0" id="writing">
  <div class="max-w-2xl mx-auto">
    <span
      class="text-xs font-mono uppercase tracking-widest text-muted-foreground block mb-12"
      >Writing</span
    >

    <ul class="space-y-6">
      {
        ideas.map((item) => (
          <li>
            <a href="#" class="flex items-baseline justify-between group">
              <span class="text-lg text-muted-foreground group-hover:text-accent transition-colors duration-300">
                {item.title}
              </span>
              <span class="text-xs font-mono text-muted-foreground/50">
                {item.date}
              </span>
            </a>
          </li>
        ))
      }
    </ul>
  </div>
</section>
